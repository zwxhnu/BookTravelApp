<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        >
    <ImageView
        android:layout_marginLeft="30dp"
        android:id="@+id/mybookevaluation_image"
        android:layout_width="100dp"
        android:layout_height="180dp"
       />

    <TextView
        android:id="@+id/mybookevaluation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/mybookevaluation_image"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
       	android:layout_marginTop="30dp"
     />
    <TextView
        android:id="@+id/mybookevaluation_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mybookevaluation_name"
        android:textColor="#000000"
          android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mybookevaluation_image"
       	android:layout_marginTop="10dp"
     />
    <TextView
        android:id="@+id/mybookevaluation_content"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/mybookevaluation_data"
        android:textColor="#000000"
          android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/mybookevaluation_image"
       	android:layout_marginTop="10dp"
     />
  </RelativeLayout>
</LinearLayout>