<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reg_back_btn2"
            android:layout_width="70dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/selector_btn_back"
            android:gravity="center_horizontal|center_vertical"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/register_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/register"
            android:textColor="@color/white"
            android:textSize="20.0sp" />
    </RelativeLayout>
       <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/shape_bg"
        android:orientation="vertical" >

           <ImageView
               android:id="@+id/reviseHead"
               android:layout_width="75.0dip"
               android:layout_height="75.0dip"
               android:background="@drawable/defaultboy"
               android:layout_marginLeft="120dip" />

        <TextView
                android:id="@+id/nickname_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:gravity="center"
                android:paddingLeft="125dip"
                android:text="昵      称"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/age_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:gravity="center"
                android:paddingLeft="0.0dip"
                android:text="性      别"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/reg_age"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_weight="1.88"
                android:background="@android:color/white"
                android:maxLength="20"
                android:paddingLeft="10.0dip"
                android:textColor="#ff545454"
                android:textSize="16.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              	android:id="@+id/age"
                android:gravity="center"
                android:text="年      龄"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="18.0sp" />

            <EditText
                android:id="@+id/reg_age"
                android:layout_width="1px"
                android:inputType="phone"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_weight="3"
                android:background="@android:color/white"
        
                
                android:maxLength="20"
                android:paddingLeft="10.0dip"
                android:textColor="#ff545454"
                android:textSize="16.0sp" />
        </LinearLayout>
   
    </LinearLayout>

   <Button
        android:id="@+id/reg_nextstepbtn2"
        android:layout_width="310dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="100dip"
        android:text="下  一  步"
         android:background="#999999"
        android:textColor="#ff000000"
        android:textSize="18.0sp" />

          
</LinearLayout>
